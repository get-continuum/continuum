            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/enforce": {
      "post": {
        "summary": "Enforce",
        "description": "Check whether a proposed action complies with existing decisions for the given scope. Do NOT use this to save or create decisions — use /commit for that. Do NOT call enforce after commit; commit alone is sufficient to save a decision.",
