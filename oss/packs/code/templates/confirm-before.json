{
  "$schema": "../../contracts/schemas/decision.v0.schema.json",
  "id": "<decision-id>",
  "version": 0,
  "status": "active",
  "title": "<Short title: what requires confirmation>",
  "rationale": "<Why confirmation is required before proceeding>",
  "options_considered": [
    {
      "id": "<proceed-option-id>",
      "title": "<Proceed with action after confirmation>",
      "selected": true,
      "rejected_reason": null
    },
    {
      "id": "<skip-option-id>",
      "title": "<Skip or defer action>",
      "selected": false,
      "rejected_reason": "<Why skipping was not chosen by default>"
    }
  ],
  "context": {
    "trigger": "<What triggered this decision>",
    "source": "<agent | human | pair>",
    "timestamp": "<ISO-8601 timestamp>",
    "actor": "<Who made the decision>"
  },
  "enforcement": {
    "scope": "<project/module/path>",
    "decision_type": "behavior_rule",
    "override_policy": "warn"
  },
  "stakeholders": ["<team-or-person>"],
  "metadata": {
    "requires_confirmation": true,
    "confirmation_prompt": "<Question to ask before proceeding>"
  }
}
