#!/usr/bin/env python3
"""
Strip unwanted AI co-author trailers from commit messages.

This prevents commits like:
  Co-authored-by: Cursor <cursoragent@cursor.com>
"""

from __future__ import annotations

import re
import sys
from pathlib import Path


def main() -> int:
    if len(sys.argv) < 2:
        return 0

    msg_path = Path(sys.argv[1])
    if not msg_path.exists():
        return 0

    text = msg_path.read_text(encoding="utf-8", errors="replace")

    # Remove any Cursor co-author trailers (common variants).
    patterns = [
        r"^Co-authored-by:\s*Cursor\s*<cursoragent@cursor\.com>\s*$",
        r"^Co-authored-by:\s*Cursor\s*<[^>]*>\s*$",
        r"^Co-authored-by:\s*Cursor\s+.*$",
    ]

    lines = text.splitlines()
    kept: list[str] = []
    for line in lines:
        if any(re.match(p, line, flags=re.IGNORECASE) for p in patterns):
            continue
        kept.append(line)

    # Preserve trailing newline if original had one.
    out = "\n".join(kept)
    if text.endswith("\n"):
        out += "\n"

    if out != text:
        msg_path.write_text(out, encoding="utf-8")

    return 0


if __name__ == "__main__":
    raise SystemExit(main())

